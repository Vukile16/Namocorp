@model List<NamoWEBAPP.Models.Contact>

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:120px;">
    <h3 class="text-center">Are you sure you want to delete this?</h3>
    <div>
        <h4 class="text-center"> Delete Contact</h4>
        <hr />
        @for (int i = 0; i < Model.Count; i++)
        {
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model[i].FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model[i].FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model[i].Surname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model[i].Surname)
                </dd>

            </dl>
        }
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        
        </div>
</div>
