@model List<NamoWEBAPP.Models.Contact>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:120px;">
    <h4 class="text-center">Edit Contact</h4>
    <hr />
    @for (int i = 0; i < Model.Count; i++)
    {
        

        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="@Model[i].ContactId" />
                    <input type="hidden" asp-for="@Model[i].ContactDetail.ContactDetailId" />
                    <input type="hidden" asp-for="@Model[i].ContactDetail.ContactType.ContactTypeId" />

                    <div class="form-group">
                        <label asp-for="@Model[i].FirstName" class="control-label"></label>
                        <input asp-for="@Model[i].FirstName" class="form-control" />
                        <span asp-validation-for="@Model[i].FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model[i].Surname" class="control-label"></label>
                        <input asp-for="@Model[i].Surname" class="form-control" />
                        <span asp-validation-for="@Model[i].Surname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model[i].BirthDate" class="control-label"></label>
                        <input asp-for="@Model[i].BirthDate" class="form-control" />
                        <span asp-validation-for="@Model[i].BirthDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model[i].ContactDetail.Description" class="control-label"></label>
                        <input asp-for="@Model[i].ContactDetail.Description" class="form-control" />
                        <span asp-validation-for="@Model[i].ContactDetail.Description" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="@Model[i].ContactType.ContactTypeId" class="control-label"></label>

                        <select asp-for="@Model[i].ContactType.ContactTypeId" class="form-control">
                            <option value="@ViewBag.ContactType.ContactTypeId">@ViewBag.ContactType.Type</option>
                            @foreach (var type in (ViewBag.TypeList as List<NamoWEBAPP.Models.ContactType>))
                            {
                                <option value="@type.ContactTypeId">@type.Type</option>
                            }
                        </select>

                        @*<input asp-for="@Model[i].ContactDetail.ContactType.Type" class="form-control" />*@
                        <span asp-validation-for="@Model[i].ContactType.ContactTypeId" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="@Model[i].ContactingType" class="control-label"></label>
                        <input asp-for="@Model[i].ContactingType" class="form-control" />
                        <span asp-validation-for="@Model[i].ContactingType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    }

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
